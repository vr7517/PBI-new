    "version": "0.2.0",
    "compounds": [
        {
            "name": "Client + Server",
            "configurations": [
                "Python: Flask",
                "Edge: Browser"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--host","0.0.0.0",
                "--port","5000",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
        {
            "type": "edge",
            "request": "launch",
            "version": "beta",
            "name": "Edge: Browser",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}",
            "breakOnLoad": true
        }
    ]
}